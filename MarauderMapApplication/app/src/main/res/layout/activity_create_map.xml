<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="hearc.ch.maraudermapapplication.createmap.CreateMapActivity"
    android:background="@drawable/carte_maraudeur"
    android:id="@+id/layoutImage">

    <hearc.ch.maraudermapapplication.createmap.DrawView
        android:id="@+id/drawMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnPlaceBeacon"
        android:background="@drawable/back_button_transpa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:onClick="browseGalleryClick"
        android:text="@string/action_take_map"/>

    <Button
        android:id="@+id/btnSavePlan"
        android:background="@drawable/back_button_transpa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:visibility="gone"
        android:onClick="savePlanAndBeacon"
        android:text="@string/save"/>

</LinearLayout>
