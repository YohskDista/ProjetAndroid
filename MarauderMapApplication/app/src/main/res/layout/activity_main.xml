    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="hearc.ch.maraudermapapplication.MainActivity"
    android:background="@drawable/carte_maraudeur">

    <Button
        android:id="@+id/btnSeeMap"
        android:text="Voir les cartes"
        android:background="@drawable/back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:onClick="sawAllMaps"/>

    <Button
        android:id="@+id/btnCreateMap"
        android:text="CrÃ©er une carte"
        android:background="@drawable/back_button"
        android:layout_width="match_parent"
